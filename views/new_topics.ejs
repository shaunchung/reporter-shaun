                    <li class="nav-item px-2">
                        <a href="/" class="nav-link">Dashboard</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/new_topics/?Page=1" class="nav-link active">Topics</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/photography/?Page=1" class="nav-link">Photography</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown mr-3">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-user"></i> Welcome Brad
                        </a>
                        <div class="dropdown-menu">
                            <a href="profile.html" class="dropdown-item">
                                <i class="fas fa-user-circle"></i> Profile
                            </a>
                            <a href="settings.html" class="dropdown-item">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a href="login.html" class="nav-link">
                            <i class="fas fa-user-times"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- HEADER -->
    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>
                        <i class="fas fa-book"></i> New Topics</h1>
                </div>
            </div>
        </div>
    </header>

    <!-- SEARCH -->
    <section id="search" class="py-4 mb-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 ml-auto">
                    <div class="input-group">
                        <input type="text" id="search" class="form-control" placeholder="Search Topics ID...">
                        <div class="input-group-append">
                            <button onclick="searchURL()" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- POSTS -->
    <section id="posts">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <h4>New Topics</h4>
                        </div>
                        <table class="table  table-hover">
                            <!-- <thead class="thead-dark">
                                <tr>
                                    <th>#</th>
                                    <th>title</th>
                                    <th>content</th>
                                    <th>url</th>
                                    <th></th>
                                </tr>
                            </thead> -->
                            <tbody class="tbody-dark">

                                <tr>
                                    <th scope="row">Id</th>
                                    <td>
                                        <%= data[0].id %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Title</th>
                                    <td>
                                        <a href=" <%= data[0].url %>" target="new_blank">
                                            <%= data[0].title %></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Tag</th>
                                    <td>
                                        <%= data[0].tag %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Content</th>
                                    <td>
                                        <%= data[0].content %>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Image</th>
                                    <td>
                                        <a href="<%= data[0].img_url %>" target="new_blank">
                                        <img class="col-4" src="<%= data[0].img_url %>" alt="<%= data[0].title %>"></a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Action</th>
                                    <td>
                                        <button button value="Details" class="btn btn-secondary" onclick="editTopic('<%= data[0].id %>')">
                                            <i class="fas fa-angle-double-right"></i> Details
                                        </button>
            
                                    </td>
                                    </th>
                                </tr>

                            </tbody>
                        </table>

                        <!-- PAGINATION -->
                        <nav class="ml-4">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a href="/new_topics/?Page=1" class="page-link">First</a>
                                </li>
                                <li class="page-item active">
                                    <a href="/new_topics/?Page=<%= data[0].id %>" class="page-link">
                                        <%= data[0].id %></a>
                                </li>
                                <%if(data[0].id+1< length ){%>
                                <li class="page-item">
                                    <a href="/new_topics/?Page=<%= data[0].id+1 %>" class="page-link">
                                        <%= data[0].id+1 %></a>
                                </li>
                                <%}%>
                                <%if(data[0].id+2< length ){%>
                                <li class="page-item">
                                    <a href="/new_topics/?Page=<%= data[0].id+2 %>" class="page-link">
                                        <%= data[0].id+2 %></a>
                                </li>
                                <li>
                                    ......
                                <li>
                                    <%}%>
                                    <%if(data[0].id!=length ){%>
                                <li class="page-item">
                                    <a href="/new_topics/?Page=<%= length %>" class="page-link">
                                        <%= length %></a>
                                </li>
                                <%}%>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FOOTER -->
    <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="lead text-center">
                        Copyright &copy;
                        <span id="year"></span> Blogen
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
        crossorigin="anonymous"></script>


    <script>
        // Get the current year for the copyright
        $('#year').text(new Date().getFullYear());
    </script>
</body>

</html>