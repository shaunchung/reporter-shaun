        //     window.location.href = "/new_topics/search?id=" + id;
        // }
        function searchURL(){
    window.location = "/new_topics/?Page=" + document.getElementsByTagName("input")[0].value;;
  }
        function PagePost(id) {
            window.location.href = "/new_topics/?Page=" + id;
        }
    </script>
</head>

<body>
